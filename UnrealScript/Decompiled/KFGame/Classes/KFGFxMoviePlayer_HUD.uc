function Callback_BroadcastChatMessage(string NewMessage)
{
    if(!IsPendingKill())
    {
        if(NewMessage != "")
        {
            if(KFPC.CurrentTextChatChannel == 1)
            {
                GetPC().TeamSay(NewMessage);                
            }
            else
            {
                GetPC().Say(NewMessage);
            }
        }
    }
}

