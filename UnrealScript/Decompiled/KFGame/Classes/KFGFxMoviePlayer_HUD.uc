function EatMyInput(bool bValue)
{
    local byte HUDPriority;

    if(bValue)
    {
        GetPC().PlayerInput.ResetInput();
    }
    SetMovieCanReceiveFocus(bValue);
    SetMovieCanReceiveInput(bValue);
    HUDPriority = ((bValue) ? 255 : 1);
    SetPriority(HUDPriority);
}

