            PlayAnimation(SelectedAnim);
        }
    }
    if(Role == ROLE_Authority)
    {
        Detonate();
    }
    AnimDuration = 0.75;
    if(bInSprintState)
    {
        SetTimer(AnimDuration * 0.8, false, 'PlaySprintStart');        
    }
    else
    {
        SetTimer(AnimDuration * 0.5, false, 'GotoActiveState');
    }
}

simulated function Detonate()
