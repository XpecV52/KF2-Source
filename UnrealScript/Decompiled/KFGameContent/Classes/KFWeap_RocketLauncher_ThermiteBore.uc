            HarpoonIndex = DeployedHarpoons.Find(HarpoonActor;
        }
    }
    if(HarpoonIndex != -1)
    {
        DeployedHarpoons.Remove(HarpoonIndex, 1;
        NumDeployedHarpoons = DeployedHarpoons.Length;
        bForceNetUpdate = true;
    }
}

