        {
            if(CanSwitchWeapons())
            {
                Instigator.Controller.ClientSwitchToBestWeapon(false);
            }
        }
    }
}

function RemoveDeployedHarpoon(optional int HarpoonIndex, optional Actor HarpoonActor)
{
