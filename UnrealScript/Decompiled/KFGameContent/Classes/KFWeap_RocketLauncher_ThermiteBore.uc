simulated function PrepareAndDetonate()
{
    local name SelectedAnim;
    local float AnimDuration;
    local bool bInSprintState;

    if(bUsingSights)
    {
        SelectedAnim = ((ShouldPlayFireLast(0)) ? DetonateAnimIronLast : DetonateAnimIron);        
    }
    else
