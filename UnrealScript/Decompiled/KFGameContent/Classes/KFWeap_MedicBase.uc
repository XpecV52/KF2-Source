function AdjustLockTarget(Actor NewLockTarget)
{
    if(LockedTarget == NewLockTarget)
    {
        return;
    }
    if(NewLockTarget == none)
    {
        if(bLockedOnTarget)
        {
            bLockedOnTarget = false;
            LockedTarget = none;
            if((OpticsUI != none) && PendingLockedTarget == none)
