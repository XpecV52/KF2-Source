                OpticsUI.ClearLockOn();
            }
            ClientPlayTargetingSound(LockLostSoundFirstPerson);
        }        
    }
    else
    {
        bLockedOnTarget = true;
        LockedTarget = NewLockTarget;
        if(OpticsUI != none)
        {
            OpticsUI.LockedOn();
        }
        ClientPlayTargetingSound(LockAcquiredSoundFirstPerson);
    }
}

